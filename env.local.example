# Server-side API keys for AI providers (not exposed to the client)
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=your_mysql_username
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=ceochat

# JWT Secret for admin authentication (generate a random string)
JWT_SECRET=your_jwt_secret_here_change_this_to_a_random_string

# Server port for Express backend
SERVER_PORT=3001

# BYU CAS configuration
CAS_ENABLED=false
# CAS server (ensure trailing /)
CAS_SERVER_URL=https://cas.byu.edu/cas
# Public base URL where this app is reachable (no trailing /). Example when hosted at sub-path:
# https://services.byu.edu/chatwithceo
CAS_SERVICE_BASE_URL=http://localhost:3001
# Frontend redirect base after CAS verify
CAS_REDIRECT_BASE_URL=http://localhost:3000
# Session cookie path must match deployment path (e.g., /chatwithceo). For local dev, use /
SESSION_COOKIE_PATH=/
# Optional cookie domain (leave blank for default host scope)
SESSION_COOKIE_DOMAIN=
# Attribute mappings from CAS
CAS_ATTR_EMAIL_FIELD=emailAddress
CAS_ATTR_NETID_FIELD=user
CAS_ATTR_PREFERRED_FIRST_FIELD=preferredFirstName
CAS_ATTR_PREFERRED_LAST_FIELD=preferredSurname
CAS_ATTR_FIRSTNAME_FIELD=givenName
CAS_ATTR_LASTNAME_FIELD=sn

